---
interface Props {
    href?: string;
    size?: number;
}

const { href = "/", size = 48 } = Astro.props;
---

<a href={href} class="logo" aria-label="Go to Home">
    <svg
        width={size}
        height={size}
        viewBox="0 0 40 40"
        fill="none"
        xmlns="http://www.w3.org/2000/svg"
    >
        <!-- Gradient background for modern feel -->
        <defs>
            <linearGradient id="bgGradient" x1="0%" y1="0%" x2="100%" y2="100%">
                <stop
                    offset="0%"
                    style="stop-color:var(--pink-9);stop-opacity:1"></stop>
                <stop
                    offset="100%"
                    style="stop-color:var(--pink-10);stop-opacity:1"></stop>
            </linearGradient>
            <linearGradient id="waveGradient" x1="0%" y1="0%" x2="0%" y2="100%">
                <stop offset="0%" style="stop-color:#ffffff;stop-opacity:1"
                ></stop>
                <stop offset="100%" style="stop-color:#ffffff;stop-opacity:0.9"
                ></stop>
            </linearGradient>
        </defs>

        <!-- Rounded square background -->
        <rect width="40" height="40" rx="5" fill="url(#bgGradient)"></rect>

        <!-- Sound wave visualization - simple and clean -->
        <!-- Left wave bar -->
        <rect
            x="10"
            y="16"
            width="2.5"
            height="8"
            rx="1.25"
            fill="url(#waveGradient)"></rect>
        <!-- Middle-left wave bar (taller) -->
        <rect
            x="14"
            y="12"
            width="2.5"
            height="16"
            rx="1.25"
            fill="url(#waveGradient)"></rect>
        <!-- Center wave bar (tallest) -->
        <rect
            x="18"
            y="8"
            width="2.5"
            height="24"
            rx="1.25"
            fill="url(#waveGradient)"></rect>
        <!-- Middle-right wave bar (taller) -->
        <rect
            x="22"
            y="12"
            width="2.5"
            height="16"
            rx="1.25"
            fill="url(#waveGradient)"></rect>
        <!-- Right wave bar -->
        <rect
            x="26"
            y="16"
            width="2.5"
            height="8"
            rx="1.25"
            fill="url(#waveGradient)"></rect>

        <!-- Small "F" accent in corner -->
        <text
            x="29"
            y="35"
            font-family="Arial, sans-serif"
            font-size="8"
            font-weight="bold"
            fill="white"
            opacity="0.7">F</text
        >
    </svg>
</a>
