---
interface Props {
    href?: string;
    size?: number;
}

const { href = "/", size = 48 } = Astro.props;
---

<a href={href} class="logo" aria-label="Go to Home">
    <svg
        width={size}
        height={size}
        viewBox="0 0 48 48"
        fill="none"
        xmlns="http://www.w3.org/2000/svg"
    >
        <defs>
            <linearGradient id="bgGradient" x1="0%" y1="0%" x2="100%" y2="100%">
                <stop
                    offset="0%"
                    style="stop-color:var(--pink-9);stop-opacity:1"></stop>
                <stop
                    offset="100%"
                    style="stop-color:var(--pink-10);stop-opacity:1"></stop>
            </linearGradient>

            <linearGradient id="waveGradient" x1="0%" y1="0%" x2="0%" y2="100%">
                <stop offset="0%" style="stop-color:#ffffff;stop-opacity:1"
                ></stop>
                <stop offset="100%" style="stop-color:#ffffff;stop-opacity:0.6"
                ></stop>
            </linearGradient>

            <filter
                id="softShadow"
                x="-20%"
                y="-20%"
                width="140%"
                height="140%"
            >
                <feDropShadow
                    dx="0"
                    dy="2"
                    stdDeviation="2"
                    flood-color="#000"
                    flood-opacity="0.15"></feDropShadow>
            </filter>
        </defs>

        <g filter="url(#softShadow)">
            <path
                d="M13 8.5 L37 22 C39 23 39 25 37 26 L13 39.5 C10.5 41 7 39 7 36 L7 12 C7 9 10.5 7 13 8.5 Z"
                fill="url(#bgGradient)"
                stroke="white"
                stroke-opacity="0.2"
                stroke-width="1"></path>
        </g>

        <rect
            x="10"
            y="20"
            width="2.5"
            height="8"
            rx="1.25"
            fill="url(#waveGradient)"></rect>
        <rect
            x="14"
            y="16"
            width="2.5"
            height="16"
            rx="1.25"
            fill="url(#waveGradient)"></rect>
        <rect
            x="18"
            y="12"
            width="2.5"
            height="24"
            rx="1.25"
            fill="url(#waveGradient)"></rect>
        <rect
            x="22"
            y="16"
            width="2.5"
            height="16"
            rx="1.25"
            fill="url(#waveGradient)"></rect>
        <rect
            x="26"
            y="20"
            width="2.5"
            height="8"
            rx="1.25"
            fill="url(#waveGradient)"></rect>

        <text
            x="11"
            y="36"
            font-family="-apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif"
            font-size="7"
            font-weight="800"
            fill="white"
            fill-opacity="0.5"
            style="user-select: none;">F</text
        >
    </svg>
</a>

<style>
    /* Add a subtle interactive lift */
    .logo {
        display: inline-block;
        transition: transform 0.2s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        border-radius: 99px; /* Helps focus ring in some browsers */
    }

    .logo:hover {
        transform: scale(1.05);
    }

    .logo:active {
        transform: scale(0.95);
    }
</style>
