---
import BaseLayout from "../layouts/BaseLayout.astro";
import Button from "../components/ui/Button.astro";
import Input from "../components/ui/Input.astro";
import AvatarGrid from "../components/create/AvatarGrid.tsx";
import VoiceDropzone from "../components/create/VoiceDropzone.tsx";
import PreviewEditModal from "../islands/PreviewEditModal";
import { getCurrentUser, checkProStatus } from "../lib/firebase/auth";
import { generateAvatarUrl } from "../lib/utils/avatar";
import Logo from "@/components/ui/Logo.astro";

const user = await getCurrentUser(Astro);
if (!user) return Astro.redirect("/");

const isPro = await checkProStatus(user.uid);
const userAvatarUrl =
    user.avatarUrl || generateAvatarUrl(user.email, "avataaars");
---

<BaseLayout title="Create Character - Fennai">
    <div class="page-modal">
        <header class="create-header">
            <div class="logo">
                <Logo size={58}>
                    <a href="/dashboard" class="user-profile">
                        <img
                            src={userAvatarUrl}
                            alt={user.displayName}
                            class="user-avatar"
                        />
                    </a>
                </Logo>
            </div>
        </header>

        <main class="create-main">
            <h1 class="page-title fade-in">
                {user.displayName}, Create a New Character
            </h1>

            <form id="create-form" class="create-form">
                <div
                    class="form-section fade-in"
                    style="animation-delay: 0.1s;"
                >
                    <label class="section-label">
                        Pick an avatar for your character
                        <span class="tooltip-container">
                            <svg
                                xmlns="http://www.w3.org/2000/svg"
                                width="24"
                                height="24"
                                viewBox="0 0 24 24"
                                fill="none"
                                stroke="currentColor"
                                stroke-width="2"
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                class="tooltip-icon"
                                ><circle cx="12" cy="12" r="10"></circle><path
                                    d="M9.09 9a3 3 0 0 1 5.83 1c0 2-3 3-3 3"
                                ></path><line x1="12" y1="17" x2="12.01" y2="17"
                                ></line></svg
                            >
                            <span class="tooltip-text"
                                >Choose a visual style that best represents your
                                AI character's personality.</span
                            >
                        </span>
                    </label>
                    {/* Hidden input to catch the value from React */}
                    <input
                        type="hidden"
                        name="avatarStyle"
                        id="hidden-avatar-input"
                        value="avataaars"
                    />
                    <AvatarGrid client:load />
                </div>

                <div
                    class="form-section fade-in"
                    style="animation-delay: 0.2s;"
                >
                    <label class="section-label">
                        Give your character a name
                        <span class="tooltip-container">
                            <svg
                                xmlns="http://www.w3.org/2000/svg"
                                width="24"
                                height="24"
                                viewBox="0 0 24 24"
                                fill="none"
                                stroke="currentColor"
                                stroke-width="2"
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                class="tooltip-icon"
                                ><circle cx="12" cy="12" r="10"></circle><path
                                    d="M9.09 9a3 3 0 0 1 5.83 1c0 2-3 3-3 3"
                                ></path><line x1="12" y1="17" x2="12.01" y2="17"
                                ></line></svg
                            >
                            <span class="tooltip-text"
                                >This name will be used to identify your
                                character in chats and interactions.</span
                            >
                        </span>
                    </label>
                    <Input
                        type="text"
                        id="character-name"
                        name="characterName"
                        placeholder="e.g., Sarah, John, Robot..."
                        required
                        minlength={2}
                        maxlength={50}
                    />
                </div>

                <div
                    class="form-section fade-in"
                    style="animation-delay: 0.3s;"
                >
                    <label class="section-label">
                        Give your character a voice
                        <span class="tooltip-container">
                            <svg
                                xmlns="http://www.w3.org/2000/svg"
                                width="24"
                                height="24"
                                viewBox="0 0 24 24"
                                fill="none"
                                stroke="currentColor"
                                stroke-width="2"
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                class="tooltip-icon"
                                ><circle cx="12" cy="12" r="10"></circle><path
                                    d="M9.09 9a3 3 0 0 1 5.83 1c0 2-3 3-3 3"
                                ></path><line x1="12" y1="17" x2="12.01" y2="17"
                                ></line></svg
                            >
                            <span class="tooltip-text"
                                >Upload a short audio sample to clone a unique
                                voice for your character.</span
                            >
                        </span>
                    </label>
                    <VoiceDropzone client:load />
                </div>

                {
                    isPro && (
                        <div
                            class="form-section fade-in"
                            style="animation-delay: 0.4s;"
                        >
                            <label class="toggle-label">
                                <input
                                    type="checkbox"
                                    name="saveAcrossBrowsers"
                                    class="toggle-input"
                                />
                                <span class="toggle-switch" />
                                <span class="toggle-text">
                                    Save your generated voices across browsers
                                </span>
                                <span class="tooltip-container">
                                    <svg
                                        xmlns="http://www.w3.org/2000/svg"
                                        width="24"
                                        height="24"
                                        viewBox="0 0 24 24"
                                        fill="none"
                                        stroke="currentColor"
                                        stroke-width="2"
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        class="tooltip-icon"
                                    >
                                        <>
                                            <circle cx="12" cy="12" r="10" />
                                            <path d="M9.09 9a3 3 0 0 1 5.83 1c0 2-3 3-3 3" />
                                            <line
                                                x1="12"
                                                y1="17"
                                                x2="12.01"
                                                y2="17"
                                            />
                                        </>
                                    </svg>
                                    <span class="tooltip-text">
                                        Store your cloned voices in the cloud so
                                        you can access them from any device.
                                    </span>
                                </span>
                            </label>
                        </div>
                    )
                }

                <div
                    id="error-message"
                    class="error-display"
                    style="display: none;"
                >
                </div>

                <div class="fade-in" style="animation-delay: 0.5s;">
                    <Button
                        type="submit"
                        variant="primary"
                        size="sm"
                        class="submit-btn"
                    >
                        Create Character
                    </Button>
                </div>
            </form>
        </main>

        <PreviewEditModal client:load />
    </div>

    <script>
        const form = document.getElementById("create-form") as HTMLFormElement;
        const errorMessage = document.getElementById("error-message")!;
        let selectedFile: File | null = null;

        // 1. Listen for File Updates from React Component
        window.addEventListener("voice-file-updated", ((e: CustomEvent) => {
            selectedFile = e.detail;

            // Also trigger your validation logic immediately here if needed
            if (selectedFile) {
                const validTypes = [
                    "audio/mpeg",
                    "audio/wav",
                    "audio/ogg",
                    "audio/mp3",
                ];
                const maxSize = 10 * 1024 * 1024;
                if (
                    !validTypes.includes(selectedFile.type) &&
                    !selectedFile.type.startsWith("audio/")
                ) {
                    showError("Please upload a valid audio file");
                    selectedFile = null; // Reset
                } else if (selectedFile.size > maxSize) {
                    showError("File size must be less than 10MB");
                    selectedFile = null;
                } else {
                    errorMessage.style.display = "none";
                    // Trigger Preview Logic
                    window.dispatchEvent(
                        new CustomEvent("open-preview-modal", {
                            detail: {
                                audioBlob: selectedFile,
                                source: "create-upload",
                            },
                        }),
                    );
                }
            }
        }) as EventListener);

        // 2. Listen for 'Edited' file coming back from the Modal
        window.addEventListener("voice-edited", ((e: CustomEvent) => {
            if (e.detail.source === "create-upload") {
                selectedFile = new File([e.detail.blob], "voice_sample.wav", {
                    type: "audio/wav",
                });
                // Note: We don't need to update UI here manually because the React VoiceDropzone
                // handles its own state. But we could dispatch an event back to React if we wanted the preview to update.
                // For now, let's assume the user is happy with the flow.
            }
        }) as EventListener);

        function showError(message: string) {
            errorMessage.textContent = message;
            errorMessage.style.display = "block";
        }

        // 3. Form Submission
        form.addEventListener("submit", async (e) => {
            e.preventDefault();

            if (!selectedFile) {
                showError("Please upload a voice sample");
                return;
            }

            const formData = new FormData(form);
            // Manually append the file because it lives in JS memory, not the form DOM
            formData.append("voiceFile", selectedFile);
            // Rename characterName to match API expectation if needed
            formData.append("name", formData.get("characterName") as string);

            const submitBtn = form.querySelector(
                'button[type="submit"]',
            ) as HTMLButtonElement;
            const originalText = submitBtn.innerText;
            submitBtn.disabled = true;
            submitBtn.innerText = "Creating...";

            try {
                const response = await fetch("/api/characters/create", {
                    method: "POST",
                    body: formData,
                });
                const data = await response.json();

                if (response.ok) {
                    window.location.href = "/profile";
                } else {
                    showError(data.error || "Failed to create character");
                    submitBtn.disabled = false;
                    submitBtn.innerText = originalText;
                }
            } catch (error) {
                showError("An error occurred. Please try again.");
                submitBtn.disabled = false;
                submitBtn.innerText = originalText;
            }
        });
    </script>

    <style>
        .create-header {
            display: flex;
            align-items: center;
            justify-content: space-between;
            margin-bottom: var(--space-2xl);
            padding: var(--space-2xs);
        }

        .user-avatar {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            border: 1px solid var(--mauve-6);
        }

        .create-main {
            max-width: 700px;
            margin: 0 auto;
            padding: var(--space-3xs);
        }

        .page-title {
            font-size: var(--step-4);
            font-weight: 700;
            margin-bottom: var(--space-2xl);
            color: var(--mauve-12);
            text-align: center;
        }

        .create-form {
            display: flex;
            flex-direction: column;
            gap: var(--space-xl);
        }

        .section-label {
            font-size: var(--step-0);
            font-weight: 600;
            color: var(--mauve-12);
            margin-bottom: var(--space-s);
            display: flex;
            align-items: center;
        }

        .tooltip-container {
            position: relative;
            display: inline-flex;
            align-items: center;
            margin-left: 8px;
            cursor: help;
        }

        .tooltip-icon {
            width: 16px;
            height: 16px;
            color: var(--mauve-11);
            transition: color 0.2s;
        }

        .tooltip-container:hover .tooltip-icon {
            color: var(--pink-9);
        }

        .tooltip-text {
            visibility: hidden;
            width: 220px;
            background-color: var(--mauve-12);
            color: var(--mauve-1);
            text-align: center;
            border-radius: 6px;
            padding: 8px 12px;
            position: absolute;
            z-index: 10;
            bottom: 135%;
            left: 50%;
            margin-left: -110px;
            opacity: 0;
            transition:
                opacity 0.3s,
                transform 0.3s;
            transform: translateY(5px);
            font-size: 0.8rem;
            font-weight: normal;
            pointer-events: none;
            box-shadow: var(--shadow-box-m);
            line-height: 1.4;
        }

        .tooltip-text::after {
            content: "";
            position: absolute;
            top: 100%;
            left: 50%;
            margin-left: -5px;
            border-width: 5px;
            border-style: solid;
            border-color: var(--mauve-12) transparent transparent transparent;
        }

        .tooltip-container:hover .tooltip-text {
            visibility: visible;
            opacity: 1;
            transform: translateY(0);
        }

        /* Simple Entry Animation for Astro components */
        .fade-in {
            opacity: 0;
            animation: fadeInUp 0.6s cubic-bezier(0.16, 1, 0.3, 1) forwards;
        }

        @keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        /* Toggle Switch Styles (Kept as vanilla CSS) */
        .toggle-label {
            display: flex;
            align-items: center;
            gap: var(--space-m);
            cursor: pointer;
        }
        .toggle-input {
            display: none;
        }
        .toggle-switch {
            position: relative;
            width: 48px;
            height: 24px;
            background: var(--mauve-7);
            border-radius: 12px;
            transition: background 0.3s ease;
        }
        .toggle-switch::after {
            content: "";
            position: absolute;
            top: 2px;
            left: 2px;
            width: 20px;
            height: 20px;
            background: white;
            border-radius: 50%;
            transition: transform 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
        }
        .toggle-input:checked + .toggle-switch {
            background: var(--pink-9);
        }
        .toggle-input:checked + .toggle-switch::after {
            transform: translateX(24px);
        }
        .toggle-text {
            color: var(--mauve-12);
            font-size: var(--space-0);
        }

        .error-display {
            padding: var(--space-m);
            background: rgba(239, 68, 68, 0.1);
            border: 1px solid #ef4444;
            border-radius: var(--radius-m);
            color: #dc2626;
        }
        .submit-btn {
            width: 100%;
        }
    </style>
</BaseLayout>
