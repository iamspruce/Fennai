rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // User-specific paths for characters and voices
    match /users/{userId}/characters/{allPaths=**} {
      // Only the owner can write
      allow write: if request.auth != null && request.auth.uid == userId;
      // Anyone can read (public access for audio playback)
      allow read: if true;
    }
    
    match /users/{userId}/voices/{allPaths=**} {
      // Only the owner can write
      allow write: if request.auth != null && request.auth.uid == userId;
      // Anyone can read (public access for audio playback)
      allow read: if true;
    }
    
    // Other user files remain private
    match /users/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}